<Window x:Class="MOS_PowerPoint_app.Views.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="結果画面" 
        Width="1200"
        Height="800"
        MinWidth="800"
        MinHeight="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="#F5F5F5"
        Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- ヘッダー（ドラッグ可能） -->
        <Border Grid.Row="0" Background="#1E40AF" Padding="20,15" MouseDown="Header_MouseDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="結果画面" 
                           Foreground="White" FontSize="24" FontWeight="Bold"
                           VerticalAlignment="Center"/>
                
                <Button Grid.Column="1" Name="CloseButton" Content="✕" 
                        Background="Transparent" Foreground="White" 
                        FontSize="20" FontWeight="Bold"
                        Width="40" Height="40"
                        BorderThickness="0"
                        Click="CloseButton_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#DC2626"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
        
        <!-- メインコンテンツ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20">
                <!-- タイトル -->
                <TextBlock Text="試験結果" 
                           FontSize="28" FontWeight="Bold" 
                           Foreground="#1E40AF" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>
                
                <!-- 統計情報 -->
                <Border Background="White" CornerRadius="8" Padding="30" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="315" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                    </Border.Effect>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Grid Grid.Column="0">
                            <!-- 統計情報表示 -->
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <!-- 正答率表示 -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                    <TextBlock Text="正答率: " 
                                               FontSize="20" FontWeight="Medium" 
                                               Foreground="#374151"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="AccuracyTextBlock" Text="0%" 
                                               FontSize="24" FontWeight="Bold" 
                                               Foreground="#10B981"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <!-- ×の数表示 -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="✖の問題数: " 
                                               FontSize="20" FontWeight="Medium" 
                                               Foreground="#374151"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="WrongCountTextBlock" Text="0" 
                                               FontSize="24" FontWeight="Bold" 
                                               Foreground="#DC2626"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="TotalCountTextBlock" Text="/ 0" 
                                               FontSize="20" FontWeight="Medium" 
                                               Foreground="#374151"
                                               VerticalAlignment="Center"
                                               Margin="5,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                        
                        <!-- ×の問題のみ表示ボタン -->
                        <Button Grid.Column="1" Name="ShowWrongOnlyButton" Content="✖の問題のみ表示" 
                                Background="#DC2626" Foreground="White" 
                                Padding="20,10" FontWeight="Medium" FontSize="14"
                                BorderThickness="0" Click="ShowWrongOnlyButton_Click"
                                VerticalAlignment="Center"
                                Margin="30,0,0,0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#B91C1C"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- プロジェクト一覧 -->
                <ItemsControl x:Name="ProjectsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="8" Margin="0,0,0,20" 
                                    Padding="20" BorderBrush="#E5E7EB" BorderThickness="1">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" Direction="315" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                                </Border.Effect>
                                
                                <StackPanel>
                                    <!-- プロジェクトタイトル -->
                                    <TextBlock Text="{Binding ProjectTitle}" 
                                               FontSize="20" FontWeight="Bold" 
                                               Foreground="#1E40AF" Margin="0,0,0,15"/>
                                    
                                    <!-- テーブル形式のタスク一覧 -->
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- テーブルヘッダー -->
                                        <Border Grid.Row="0" Background="#F8FAFC" 
                                                BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="120"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" Text="プロジェクト番号・タスク番号" 
                                                           FontSize="19" FontWeight="Bold" 
                                                           Foreground="#374151" Padding="15,10"/>
                                                <TextBlock Grid.Column="1" Text="結果" 
                                                           FontSize="19" FontWeight="Bold" 
                                                           Foreground="#374151" Padding="15,10" 
                                                           HorizontalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                        
                                        <!-- タスク一覧 -->
                                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Tasks}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1"
                                                            MouseDown="TaskRow_MouseDown"
                                                            Cursor="Hand"
                                                            Background="Transparent">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#F3F4F6"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="120"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <!-- タスク情報 -->
                                                            <StackPanel Grid.Column="0" Margin="15,10">
                                                                <TextBlock Text="{Binding TaskTitle}" 
                                                                           FontSize="19" FontWeight="SemiBold" 
                                                                           Foreground="#374151" Margin="0,0,0,4"/>
                                                                <TextBlock Text="{Binding Description}" 
                                                                           FontSize="17" Foreground="#6B7280" 
                                                                           TextWrapping="Wrap" LineHeight="21"/>
                                                            </StackPanel>
                                                            
                                                            <!-- 結果列（✖のみ） -->
                                                            <Grid Grid.Column="1" VerticalAlignment="Center">
                                                                <TextBlock Text="{Binding ResultMark}" 
                                                                           FontSize="24" 
                                                                           FontWeight="Bold"
                                                                           Foreground="{Binding ResultColor}"
                                                                           HorizontalAlignment="Center"/>
                                                            </Grid>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
        
        <!-- フッター -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
            <Grid Margin="20,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="試験が終了しました" 
                           Foreground="#6B7280" FontSize="14"
                           VerticalAlignment="Center"/>
                
                <Button Grid.Column="1" Name="EndButton" Content="終了" 
                        Background="#1E40AF" Foreground="White" 
                        Padding="25,10" FontWeight="Medium" FontSize="14"
                        BorderThickness="0" Click="EndButton_Click"
                        VerticalAlignment="Center"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1D4ED8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
