<Window x:Class="MOS_PowerPoint_app.Views.SubjectSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MOS アプリ - 科目選択" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <Border Grid.Row="0" Background="#D04423" Height="60">
            <TextBlock Text="科目を選択してください" 
                       Foreground="White" FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- 3科目パネルボタン（横並び） -->
        <Grid Grid.Row="1" Margin="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Excel -->
            <Button Grid.Column="0" Name="ExcelButton" Content="Excel" 
                    Margin="15" Click="ExcelButton_Click"
                    FontSize="22" FontWeight="Bold" Foreground="White"
                    Cursor="Hand" BorderThickness="0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#217346" Offset="0"/>
                                    <GradientStop Color="#2D7D4A" Offset="0.5"/>
                                    <GradientStop Color="#3D9B5C" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="20">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#1B5E38" Direction="135" ShadowDepth="6" Opacity="0.4" BlurRadius="12"/>
                                        </Border.Effect>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#2D7D4A" Offset="0"/>
                                            <GradientStop Color="#3D9B5C" Offset="0.5"/>
                                            <GradientStop Color="#4DB06E" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Word -->
            <Button Grid.Column="1" Name="WordButton" Content="Word" 
                    Margin="15" Click="WordButton_Click"
                    FontSize="22" FontWeight="Bold" Foreground="White"
                    Cursor="Hand" BorderThickness="0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#2B579A" Offset="0"/>
                                    <GradientStop Color="#356BB0" Offset="0.5"/>
                                    <GradientStop Color="#4A7FC7" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="20">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#1E3A6E" Direction="135" ShadowDepth="6" Opacity="0.4" BlurRadius="12"/>
                                        </Border.Effect>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#356BB0" Offset="0"/>
                                            <GradientStop Color="#4A7FC7" Offset="0.5"/>
                                            <GradientStop Color="#5E93D8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- PowerPoint -->
            <Button Grid.Column="2" Name="PowerPointButton" Content="PowerPoint" 
                    Margin="15" Click="PowerPointButton_Click"
                    FontSize="22" FontWeight="Bold" Foreground="White"
                    Cursor="Hand" BorderThickness="0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#D04423" Offset="0"/>
                                    <GradientStop Color="#FF6B35" Offset="0.5"/>
                                    <GradientStop Color="#FF8C65" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="20">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#8B2E16" Direction="135" ShadowDepth="6" Opacity="0.4" BlurRadius="12"/>
                                        </Border.Effect>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#E04F2A" Offset="0"/>
                                            <GradientStop Color="#FF7A4A" Offset="0.5"/>
                                            <GradientStop Color="#FF9D75" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>
